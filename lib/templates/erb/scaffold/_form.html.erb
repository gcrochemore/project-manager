<%%= simple_form_for(@<%= singular_table_name %>) do |f| %>
  <%%= f.error_notification %>

  <div class="form-inputs">
  <%- attributes.each do |attribute| -%>
    <div class="form-group">
      <label for="<%= attribute.name %>"><%%= f.label :<%= attribute.name %> %></label>
      <%%= f.<%= attribute.reference? ? :association : :input %> :<%= attribute.name %>, label: false, input_html: { class: "form-control" } %>
    </div>
  <%- end -%>
  </div>

  <div class="form-actions">
    <%%= f.button :submit %>
  </div>
<%% end %>
