<div class="task-and-sub-task">
    <div class="row">
        <div class="col-1">
            <%= show_task_type(task).html_safe %>
        </div>
        <div class="col-10">
            <%= task.name %>
            <%= show_task_status(task).html_safe %>
        </div>
        <div class="col-1 text-right">
            <strong><%= number_with_precision(task.estimated_time, precision: 2) %></strong>
        </div>
    </div>

    <% task.tasks.each do |sub_task| %>
        <%= render 'tasks/show_task_and_sub_tasks', task: sub_task, begin_line: (( defined? begin_time) ? '' : begin_line) + '-' %>
    <% end %>
</div>