<div class="task-and-sub-task">
    <div class="row<%= task.not_finished ? ' task-not-finish' : '' %>">
        <div class="col-1">
            <%= show_task_type(task).html_safe %>
        </div>
        <div class="col-8">
            <%= begin_line %>
            <%= show_task_identifier(task).html_safe %>
            <%= task.name %>
            <%= show_task_status(task).html_safe %>
        </div>

        <div class="col-3 text-right">
            <%= task.end_date ? task.end_date.strftime("%d/%m") : '-- / --' %>
        </div>
    </div>

    <% task.tasks.each do |sub_task| %>
        <%= render 'tasks/show_task_and_sub_tasks_finish', task: sub_task, begin_line: (( defined? begin_line) ? begin_line : '') + '-' %>
    <% end %>
</div>