<%= simple_form_for(@assignment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date %>
    <%= f.association :user %>
    <%= f.association :task %>
    <%= f.input :time %>
    <%= f.input :comment %>
    <%= f.input :consumed %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
